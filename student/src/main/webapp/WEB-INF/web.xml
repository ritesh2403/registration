<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">

	<welcome-file-list>
		<welcome-file>registration.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>Registration</servlet-name>
		<servlet-class>com.infibeam.registration.controller.Registration</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Registration</servlet-name>
		<url-pattern>registration</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>com.infibeam.registration.controller.Login</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>login</url-pattern>
	</servlet-mapping>

    <servlet>
		<servlet-name>Save</servlet-name>
		<servlet-class>com.infibeam.registration.controller.Save</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Save</servlet-name>
		<url-pattern>save</url-pattern>
	</servlet-mapping>
	
</web-app>
